{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/cjs",
    "declarationDir": "./dist/types"
  }
}
