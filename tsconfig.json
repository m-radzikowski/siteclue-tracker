{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
