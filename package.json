{
  "name": "@siteclue/tracker",
  "version": "0.1.0",
  "author": "Maciej Radzikowski",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf dist && esbuild src/index.ts --bundle --minify --outfile=dist/siteclue-tracker.js --global-name=siteClue",
    "watch": "yarn run build --watch",
    "check-types": "tsc --noEmit",
    "size": "size-limit"
  },
  "main": "dist/siteclue-tracker.js",
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@size-limit/file": "4.11.0",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "esbuild": "0.12.5",
    "eslint": "7.27.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "rimraf": "3.0.2",
    "size-limit": "4.11.0",
    "typescript": "4.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "yarn eslint"
    ]
  },
  "size-limit": [
    {
      "path": "dist/siteclue-tracker.js",
      "limit": "2 KB"
    }
  ]
}
