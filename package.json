{
  "name": "siteclue-tracker",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Maciej Radzikowski",
    "email": "hi@siteclue.app",
    "url": "https://siteclue.app/"
  },
  "repository": "https://github.com/m-radzikowski/siteclue-tracker.git",
  "scripts": {
    "prepare": "husky install",
    "ci": "yarn install --frozen-lockfile",
    "lint": "eslint .",
    "build": "rimraf dist && esbuild src/index.ts --bundle --minify --outfile=dist/siteclue-tracker.js --global-name=siteClue",
    "watch": "yarn run build --watch",
    "check-types": "tsc --noEmit",
    "size": "size-limit",
    "release": "standard-version"
  },
  "main": "dist/siteclue-tracker.js",
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@size-limit/file": "4.11.0",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "esbuild": "0.12.5",
    "eslint": "7.27.0",
    "husky": "7.0.4",
    "lint-staged": "11.0.0",
    "rimraf": "3.0.2",
    "size-limit": "4.11.0",
    "standard-version": "9.3.2",
    "typescript": "4.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "yarn eslint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "size-limit": [
    {
      "path": "dist/siteclue-tracker.js",
      "limit": "2 KB"
    }
  ]
}
